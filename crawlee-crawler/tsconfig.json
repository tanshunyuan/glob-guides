{
  "extends": "@apify/tsconfig",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "outDir": "dist",
    "lib": ["DOM"],
    "rootDirs": ["src"],
    "baseUrl": "./",
    "noUnusedLocals": false,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "dist"]
}
